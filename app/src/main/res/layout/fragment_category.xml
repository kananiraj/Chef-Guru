<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.category.CategoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <GridLayout
            android:columnCount="2"
            android:rowCount="10"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cvGujarati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_rowWeight="1"
                app:cardElevation="3dp"
                app:cardMaxElevation="@dimen/cardview_compat_inset_shadow"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#E5E4E2"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:orientation="vertical"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        >

                        <ImageView
                            android:layout_width="370px"
                            android:layout_height="370px"
                            android:src="@drawable/gujarati"
                            android:padding="0dp"
                            />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Gujarati"
                            android:paddingTop="2dp"
                            android:textSize="20dp"
                            />

                        <ImageView
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:src="@drawable/veglogo"
                            android:layout_marginLeft="35dp"
                            android:paddingTop="10dp"

                            />


                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPanjabi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_rowWeight="1"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#E5E4E2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        >

                        <ImageView
                            android:layout_width="370px"
                            android:layout_height="370px"
                            android:src="@drawable/panjabi"
                            />
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Panjabi"
                            android:paddingTop="2dp"
                            android:textSize="20dp"
                            />

                        <ImageView
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:src="@drawable/veglogo"
                            android:layout_marginLeft="35dp"
                            android:paddingTop="10dp"

                            />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvChinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_rowWeight="1"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#E5E4E2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        >

                        <ImageView
                            android:layout_width="370px"
                            android:layout_height="370px"
                            android:src="@drawable/chinese"
                            />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Chines"
                            android:paddingTop="2dp"
                            android:textSize="20dp"
                            />

                        <ImageView
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:src="@drawable/veglogo"
                            android:layout_marginLeft="42dp"
                            android:paddingTop="10dp"

                            />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_rowWeight="1"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#E5E4E2"
                >

                <LinearLayout
                    android:id="@+id/cvAmerican"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="370px"
                            android:layout_height="370px"
                            android:src="@drawable/american" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="2dp"
                            android:text="American"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:layout_marginLeft="20dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/veglogo"

                            />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_rowWeight="1"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#E5E4E2"
                >

                <LinearLayout
                    android:id="@+id/cvFastfood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        >

                        <ImageView
                            android:layout_width="370px"
                            android:layout_height="370px"
                            android:src="@drawable/fastfood"
                            />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Fast Food"
                            android:paddingTop="2dp"
                            android:textSize="20dp"
                            />

                        <ImageView
                            android:layout_width="50px"
                            android:layout_height="70px"
                            android:src="@drawable/veglogo"
                            android:layout_marginLeft="20dp"
                            android:paddingTop="10dp"

                            />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_rowWeight="1"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#E5E4E2"
                >

                <LinearLayout
                    android:id="@+id/cvSouthindia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        >

                        <ImageView
                            android:layout_width="370px"
                            android:layout_height="370px"
                            android:src="@drawable/southidian"
                            />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="SouthIndian"
                            android:paddingTop="2dp"
                            android:textSize="20dp"
                            />

                        <ImageView
                            android:layout_width="50px"
                            android:layout_height="70px"
                            android:src="@drawable/veglogo"
                            android:layout_marginLeft="0dp"
                            android:paddingTop="10dp"

                            />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="0"
                android:layout_rowWeight="1"
                app:cardElevation="3dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#E5E4E2"
                >

                <LinearLayout
                    android:id="@+id/cvMexican"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        >

                        <ImageView
                            android:layout_width="370px"
                            android:layout_height="370px"
                            android:src="@drawable/mexi"
                            />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Mexican"
                            android:paddingTop="2dp"
                            android:textSize="20dp"
                            />

                        <ImageView
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:src="@drawable/veglogo"
                            android:layout_marginLeft="30dp"
                            android:paddingTop="10dp"

                            />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </ScrollView>
</FrameLayout>