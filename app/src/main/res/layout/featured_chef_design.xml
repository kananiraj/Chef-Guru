<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical"
        >
          <ImageView
              android:id="@+id/chef_img"
              android:layout_width="match_parent"
              android:layout_height="140dp"
              android:src="@drawable/vk2"
              android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/chef_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vikas Khanna"
            android:textSize="18sp"
            android:textColor="#292F33"
            />

        <RatingBar
            android:id="@+id/chef_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4.5"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

         <TextView
             android:id="@+id/chef_detail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/vikasdetail"
             android:textSize="10sp"
             android:textColor="#66757F"
             android:paddingStart="2dp"
             />

    </LinearLayout>



</androidx.cardview.widget.CardView>
